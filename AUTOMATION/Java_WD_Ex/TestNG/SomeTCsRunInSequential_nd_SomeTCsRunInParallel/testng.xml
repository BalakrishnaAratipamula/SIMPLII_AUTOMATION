<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Mixed Execution Suite">

    <!-- Sequential execution -->
    <test name="Sequential Tests">
        <groups>
            <run>
                <include name="sequential"/>
            </run>
        </groups>
        <classes>
            <class name="SampleTest"/>
        </classes>
    </test>

    <!-- Parallel execution -->
    <test name="Parallel Tests" parallel="methods" thread-count="4">
        <groups>
            <run>
                <include name="parallel"/>
            </run>
        </groups>
        <classes>
            <class name="SampleTest"/>
        </classes>
    </test>

</suite>